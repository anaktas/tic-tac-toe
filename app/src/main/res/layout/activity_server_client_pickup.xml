<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/green_board"
    tools:context=".activities.ServerClientPickupActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/game_instruction"
        android:fontFamily="@font/montserrat_regular"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:lineSpacingExtra="8sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:paddingTop="80dp">

        <Button
            android:id="@+id/continue_as_server"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="@string/continue_as_server"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_corner_button"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat_bold"/>

        <Button
            android:id="@+id/continue_as_client"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:text="@string/continue_as_client"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_corner_button"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat_bold"/>

    </LinearLayout>



</RelativeLayout>